<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <header>
      <% include ../partials/header %>
    </header>
    <div class="posts">
      <% include partials/top %>
      <!-- main start -->

      <!-- views/posts/new.ejs -->
      <div class="new">
        <h3>New Post</h3>
        <form action="/posts" class="posts_form" method="post">
          <label>Title</label>
          <input type="text" name="post[title]" value="">
          <div class="float_right">Author: <%= user.nickname %></div>
          <label>Body</label>
          <textarea name="post[body]"></textarea>
          <button type="submit">Submit</button>
        </form>
        <a href="/posts"><button>Back</button></a>
      </div>

      <!-- main end -->
    </div><!-- posts end -->
    <footer>
      <% include ../partials/footer %>
    </footer>
  </body>
</html>
