<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <header>
      <% include ../partials/header %>
    </header>
    <div class="posts">
      <% include partials/top %>
      <!-- main start-->

      <!-- views/posts/show.ejs -->
      <div class="show">
        <div class="buttons floats">
          <% if(user && user.equals(post.author._id)) { %>
            <form class="float_right" action="/posts/<%=post._id%>?_method=delete" method="post">
              <input class="button" type="button" value="Delete" onclick="confirm('Your post will be deleted')?this.parentElement.submit():null;">
            </form>
              <a class="button float_right" href="/posts/<%= post._id %>/edit">Edit</a>
          <% } %>
        <a class="button float_left" href="/posts">Back</a>
        </div>
        <h3 class="highlight" data-highlight="<%= search.highlight.title %>"><%= post.title %></h3>
        <div class="content floats">
          <div class="info float_right">
            <div class="highlight" data-highlight="<%= search.highlight.author %>">
              Author: <%= post.author.nickname %>
            </div>
            <div class="timestamp"><span>Created:</span>
              <%= post.getCreatedTime() %>, <%= post.getCreatedDate() %>
            </div>
            <% if(post.updatedAt) { %>
              <div class="timestamp"><span>Updated:</span>
                <%= post.getCreatedTime() %>, <%= post.getCreatedDate() %>
              </div>
            <% } %>
          </div>
          <div class="body highlight" data-highlight="<%= search.highlight.body %>"><%= post.body %></div>
        </div>
      </div>

      <!-- main end -->
          </div><!--posts end -->
    <footer>
      <% include ../partials/footer %>
    </footer>
  </body>
</html>
